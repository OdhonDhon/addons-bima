<?xml version="1.0"?>
<odoo>

    <record id="view_pos_config_form" model="ir.ui.view">
        <field name="name">pos_screen_conf.pos.config.form</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_config_form"/>
        <field name="arch" type="xml">
            <field name="iface_invoicing" position="after">
                <field name="price_display"/>
                <field name="payment_display"/>
                <field name="numpad_display"/>
                <field name="price_numpad_display" attrs="{'invisible': [('numpad_display', '=', False)]}"/>
                <field name="disc_numpad_display" attrs="{'invisible': [('numpad_display', '=', False)]}"/>
            </field>
        </field>
    </record>
NumpadWidget
</odoo>
